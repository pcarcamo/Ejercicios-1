using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            string letra;

            Console.WriteLine("Ingrese una letra vocal:");
            letra = Console.ReadLine();
            char c = (char)Console.Read();
            if (letra == "a" || letra == "e" || letra == "i" || letra == "o" || letra == "u" || char.IsLetter(c) || (char.IsLower(c)))

            {
                Console.WriteLine("Es vocal");
                Console.WriteLine("La vocal es minuscula");
            }
            else
            {

                Console.WriteLine("!no es vocal!");
                Console.WriteLine("La vocal es mayuscula");
                Console.ReadLine();


            }
            Console.ReadKey();
        }
    }

}
